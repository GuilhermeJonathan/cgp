@model Cgp.Aplicacao.GestaoDeUsuarios.Modelos.ModeloDeEdicaoDeUsuario
@{
    ViewBag.Title = "Renovação de Senha";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Caráter Geral Policial | Renovação de Senha</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="../Content/adminlte.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/toastr.min.css" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <img src="~/Content/logo_pmdf.png" alt="Logo Campeonato" style="max-height:200px">
            <br />
            <a href="#"><b>Caráter Geral </b>Policial</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Informe os dados para renovar sua senha</p>
                <form action="@Url.Action("AlterarSenhaRenovacao", "EsqueciMinhaSenha")" method="post">
                    @Html.HiddenFor(a => a.Id)
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.InputTextFor(a => a.Email, "Login", required: false, @readonly: true)
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" name="Senha" class="form-control" placeholder="Senha">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" name="RepetirSenha" class="form-control" placeholder="Repita sua Senha">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block right">Alterar Senha</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center" style="color:red;">
                            @ViewBag.Mensagem
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/Scripts/campeonatoGeral.js"></script>
    <script src="../plugins/jquery/jquery.min.js"></script>
    <script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../Scripts/adminlte.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>

    @Html.Partial("_Mensagens")
</body>
</html>


