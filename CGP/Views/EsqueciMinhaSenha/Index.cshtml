@model Cgp.Aplicacao.Login.Modelos.ModeloDeLogin
@{
    ViewBag.Title = "Esqueci minha senha";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Caráter Geral Policial | Esqueci minha senha</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="../Content/adminlte.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/toastr.min.css" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <img src="~/Content/logo_pmdf.png" alt="Logo Campeonato" style="max-height:200px">
            <br />
            <a href="#"><b>Caráter Geral </b>Policial</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Informe seu email para solicitar a troca de senha.</p>
                <form action="@Url.Action("EsqueciMinhaSenha", "EsqueciMinhaSenha")" method="post">
                    <div class="input-group mb-3">
                        <input type="email" name="login" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block right">Enviar</button>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-12 text-center" style="color:red;">
                        @ViewBag.Mensagem
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/adminlte.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/campeonatoGeral.js"></script>

    @Html.Partial("_Mensagens")
</body>
</html>

