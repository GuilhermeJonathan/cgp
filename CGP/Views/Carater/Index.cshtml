@model Cgp.Aplicacao.GestaoDeCaraters.Modelos.ModeloDeListaDeCaraters
@using GridMvc.Html

@{
    ViewBag.Title = "Lista de Caráter Gerais";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("Index", "Carater")" method="get">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Buscar Caráter</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="control-label"> Data </label>
                                    <input type="text" class="form-control mascaraData" id="data" name="Filtro.DataHora">
                                </div>
                                <div class="col-lg-4">
                                    <label class="control-label"> Cidades </label>
                                    @Html.DropDownListFor(m => m.Filtro.Cidade, Model.Filtro.Cidades, new { @class = "form-control autoComplete" })
                                </div>
                                <div class="col-lg-4">
                                    <label class="control-label"> Crimes </label>
                                    @Html.DropDownListFor(m => m.Filtro.Crime, Model.Filtro.Crimes, new { @class = "form-control autoComplete" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Cadastrar", "Carater" )" class="btn btn-info float-left">Cadastrar Caráter</a>
                            <button type="submit" class="btn btn-primary float-right">Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@ViewBag.Title</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        @Html.Grid(Model.Lista).Columns(colunas =>
                        {
                           colunas.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(
                           m => @<div class="btn-group btn-group-sm"><a href="@Url.Action("Editar", "Carater", new { id = m.Id })" title="Editar" class="btn btn-info"><i class="fas fa-pencil-alt"></i></a></div>);
                            colunas.Add(m => m.PlacaVeiculo).Titled("Placa");
                            colunas.Add(m => m.NomeVeiculo).Titled("Veículo");
                            colunas.Add(m => m.ChassiVeiculo).Titled("Chassi");
                            colunas.Add(m => m.CorVeiculo).Titled("Cor");
                            colunas.Add(m => m.AnoVeiculo).Titled("Ano");
                            colunas.Add(m => m.NomeCrime).Titled("Crime");
                            colunas.Add(m => m.NomeCidade).Titled("Cidade");

                        }).WithPaging(30).Sortable(true).EmptyText("Nenhum caráter encontrado")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {

        $('#data').datepicker({
            language: "pt-BR", autoclose: true,
            zIndexOffset: 99999999
        });

        $(".btn").click(function () {
            var idCrime = $(this).attr("data-id");
            $.ajax({
                type: 'GET',
                url: '../Crime/AtivarCrime',
                data: 'id=' + idCrime,
                success: function (resultado) {
                    campeonatoGeral.AdicionarMensagemDeSucesso(resultado);
                }
            });
        });
    })
</script>


