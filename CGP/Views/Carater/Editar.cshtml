@model Cgp.Aplicacao.GestaoDeCaraters.Modelos.ModeloDeEdicaoDeCarater

@{
    ViewBag.Title = "Editar Caráter";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" id="formEditarCarater" action="@Url.Action("Editar", "Carater")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Editar Caráter</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-2">
                                    <label class="control-label"> Placa Veículo </label>
                                    <input type="text" class="form-control placaVeiculo" id="Placa" name="Placa" value="@Model.Placa">
                                </div>
                                <div class="col-lg-2">
                                    @Html.InputTextFor(a => a.MarcaVeiculo, "Marca", required: false)
                                </div>
                                <div class="col-lg-2">
                                    @Html.InputTextFor(a => a.ModeloVeiculo, "Modelo", required: false)
                                </div>
                                <div class="col-lg-2">
                                    @Html.InputTextFor(a => a.AnoVeiculo, "Ano", required: false)
                                </div>
                                <div class="col-lg-1">
                                    @Html.InputTextFor(a => a.UfVeiculo, "Uf", required: false)
                                </div>
                                <div class="col-lg-2">
                                    @Html.InputTextFor(a => a.CorVeiculo, "Cor", required: false)
                                </div>
                                <div class="col-lg-1">
                                    @Html.InputTextFor(a => a.ChassiVeiculo, "Chassi", required: false)
                                </div>
                                <div class="row divCarrega">
                                    <div class="col-lg-12 text-center">
                                        <span class="description-header"><i class="fa fa-refresh fa-spin"></i></span>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-lg-2">
                                    <label class="control-label"> Data </label>
                                    <input type="text" class="form-control mascaraData" id="data" name="Data" value="@Model.Data">
                                </div>
                                <div class="col-lg-2">
                                    <label class="control-label"> Hora </label>
                                    <input type="time" class="form-control mascaraHora" id="Hora" name="Hora" value="@Model.Hora">
                                </div>
                                <div class="col-lg-2">
                                    <label class="control-label"> Crime </label>
                                    @Html.DropDownListFor(m => m.Crime, Model.Crimes, new { @class = "form-control autoComplete" })
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Descricao, "Histórico", required: false)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <label class="control-label"> Cidade </label>
                                    @Html.DropDownListFor(m => m.Cidade, Model.Cidades, new { @class = "form-control autoComplete" })
                                </div>
                                <div class="col-lg-3">
                                    <label class="control-label"> Situação do Caráter </label>
                                    @Html.DropDownListFor(m => m.SituacaoDoCarater, Model.SituacoesDoCarater, new { @class = "form-control autoComplete", @readonly = true })
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.ComplementoEndereco, "Complemento do Endereço", required: false)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label> @Model.UsuarioCadastro </label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-lg-4 col-sm-12">
                                    <div class="form-group">
                                        <div id="inserirFoto">Clique para upload de imagens</div>
                                    </div>
                                </div>
                            </div>
                            @if (Model.Fotos.Count > 0) {
                            <hr />
                            <div class="row">
                                <div class="col-12 product-image-thumbs">
                                    @foreach (var item in Model.Fotos)
                                    {
                                        <div class="product-image-thumb">
                                            <img src="@item.Caminho" alt="@item.Descricao" data-id="@item.Id" class="fotoCarater">
                                        </div>
                                    }
                                </div>
                            </div>
                            }
                        </div>
                        <hr />
                        <div class="card-footer">
                            @Html.BackButton() &nbsp;
                            @if (!Model.RealizouBaixa)
                            {
                                <a href="#" class="btn btn-default btnAbrirBaixa" data-id="@Model.Id"> <i class="fas fa-arrow-alt-circle-down"></i> Realizar Baixa </a>
                                <button type="submit" class="btn btn-success float-right">Salvar</button>
                            }
                        </div>

                        @if (Model.RealizouBaixa)
                        {
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="comment-text">
                                            <span class="username">@Model.UsuarioLocalizacao.</span> <br />
                                            @Model.DescricaoLocalizacao - Na cidade de @Model.CidadeLocalizacao .
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_RealizarBaixa")
@Html.Partial("_VisualizarFoto")

<script>
    $(function () {
        $(".divCarrega").hide();

        $('#data').datepicker({
            language: "pt-BR", autoclose: true,
            zIndexOffset: 99999999
        });

        $(".placaVeiculo").blur(function () {
            var placa = $(this).val();
            $.ajax({
                type: 'GET',
                url: '../BuscarPlacaDoVeiculo',
                data: 'placa=' + placa,
                beforeSend: function (resultado) {
                    $(".divCarrega").show();
                },
                success: function (resultado) {
                    debugger;
                    $(".divCarrega").hide();
                    if (resultado.veiculo != undefined) {
                        $("#MarcaVeiculo").val(resultado.veiculo.model);
                        $("#ModeloVeiculo").val(resultado.veiculo.name);
                        $("#AnoVeiculo").val(resultado.veiculo.year);
                    } else {
                        campeonatoGeral.AdicionarMensagemDeErro("Veículo não encontrado.");
                    }
                }
            });

            $.ajax({
                type: 'GET',
                url: '../BuscarPlacaDoVeiculoCompleta',
                data: 'placa=' + placa,
                beforeSend: function (resultado) {
                    $(".divCarrega").show();
                },
                success: function (resultado) {
                    debugger;
                    $(".divCarrega").hide();
                    if (resultado.veiculo != undefined) {
                        $("#UfVeiculo").val(resultado.veiculo.uf);
                        $("#CorVeiculo").val(resultado.veiculo.cor);
                        $("#ChassiVeiculo").val(resultado.veiculo.chassiTratado);
                    } else {
                        campeonatoGeral.AdicionarMensagemDeErro("Busca de chassi indisponível.");
                    }
                }
            });
        });

        $(".btnAbrirBaixa").button().click(function () {
            var idCarater = $(this).attr("data-id");
            $(".IdCaraterSelecionado").val(idCarater);
            var form = $("#modalRealizarBaixa");
            form.modal('show');
        });

        $(".btnRealizarBaixa").button().click(function () {
            var idCarater = $(".IdCaraterSelecionado").val();
            var descricao = $(".txtDescricao").val();
            var cidade = $("#CidadeLocalizacao").select2('val');

            if (cidade == "")
                campeonatoGeral.AdicionarMensagemDeErro("Selecione a cidade");
            else {
                $.ajax({
                    type: 'GET',
                    url: '/Carater/RealizarBaixa',
                    data: 'idCarater=' + idCarater + "&descricao=" + descricao + "&cidade=" + cidade,
                    success: function (resultado) {
                        campeonatoGeral.AdicionarMensagemDeSucesso(resultado);
                        window.location.assign(idCarater);
                    }
                });
            }
        });

        $(".fotoCarater").button().click(function () {
            var url = $(this).attr("src");
            var descricao = $(this).attr("alt");
            var idFoto = $(this).attr("data-id");

            $(".imgFoto").attr("src", url);
            $(".lblDescricao").html(descricao);
            $(".idFoto").val(idFoto);
            var form = $("#modalVisualizarFoto");
            form.modal('show');
        });

        $(".btnExcluirFoto").button().click(function () {
            var idFoto = $(".idFoto").val();

            $.ajax({
                type: 'GET',
                url: '/Carater/ExcluirFoto',
                data: 'id=' + idFoto,
                beforeSend: function () {
                    $.blockUI({ message: "<div style='color: white'> <i class='fa fa-spinner fa-pulse fa-3x'></i> </div>", css: { border: '0px', backgroundColor: 'none' } });
                },
                success: function (resultado) {
                    $.unblockUI();
                    campeonatoGeral.AdicionarMensagemDeSucesso(resultado.Status);
                    document.location.reload(true);
                }
            });
        });

        $("#inserirFoto").uploadFile({
            url: "@Url.Action("UploadFotos", "Carater", new { id = Model.Id })",
            fileName: "file",

            maxFileSize: 83886080,
            maxFileCount: 50,
            multiple: true,
            allowedTypes: "png,bmp,jpe,jpg,jpeg,jfif",
            showStatusAfterSuccess: false,
            
            dragDropStr: "<span> ou Arraste </span>",
            doneStr: "Enviado",
            abortStr: "Cancelar",
            extErrorStr: "Extensão não permitida.",
            sizeErrorStr: "Foi ultrapassado o tamanho máximo para upload de arquivo",
            maxFileCountErrorStr: "Foi ultrapassado o limite de upload.",
            afterUploadAll: function (e) {
                document.location.reload(true);
                campeonatoGeral.AdicionarMensagemDeSucesso("Imagem(s) adicionadas com sucesso.");
            }
        });
    })
</script>