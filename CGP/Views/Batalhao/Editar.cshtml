@model Cgp.Aplicacao.GestaoDeBatalhoes.Modelos.ModeloDeEdicaoDeBatalhao

@{
    ViewBag.Title = "Editar Time";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Editar Times</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("Editar", "Batalhao")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Editar Time</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Nome, "Nome", required: false)
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Sigla, "Sigla", required: false)
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.DataDoCadastro, "Data do Cadastro", required: false, @readonly: true)
                                </div>
                                <div class="col-lg-6">
                                    <label class="control-label"> Comando Regional </label>
                                    @Html.DropDownListFor(m => m.ComandoRegional, Model.ComandosRegionais, new { @class = "form-control autoComplete" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label"> Ativo </label>
                                @Html.CheckBoxFor(m => m.Ativo, new { @class = "checkbox" })
                            </div>
                        </div>
                        <div class="card-footer">
                            @Html.BackButton()
                            <button type="submit" class="btn btn-success float-right">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>