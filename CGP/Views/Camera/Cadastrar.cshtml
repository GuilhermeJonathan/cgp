@model Cgp.Aplicacao.GestaoDeCameras.Modelos.ModeloDeCadastroDeCamera

@{
    ViewBag.Title = "Cadastro de Câmera";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("Cadastrar", "Camera")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@ViewBag.Title</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    @Html.InputTextFor(a => a.Nome, "Nome", required: true)
                                </div>
                                <div class="col-lg-4">
                                    @Html.InputTextFor(a => a.Ponto, "Ponto", required: true)
                                </div>
                                <div class="col-lg-4">
                                    <label class="control-label"> Cidade </label>
                                    @Html.DropDownListFor(m => m.Cidade, Model.Cidades, new { @class = "form-control autoComplete", required = true })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    @Html.InputTextFor(a => a.Latitude, "Latitude", required: true)
                                </div>
                                <div class="col-lg-4">
                                    @Html.InputTextFor(a => a.Longitude, "Longitude", required: true)
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @Html.BackButton()
                            <button type="submit" class="btn btn-info float-right">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
