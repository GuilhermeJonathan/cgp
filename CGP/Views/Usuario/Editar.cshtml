@model Cgp.Aplicacao.GestaoDeUsuarios.Modelos.ModeloDeEdicaoDeUsuario

@{
    ViewBag.Title = "Editar Usuário";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                        <li class="breadcrumb-item active">Editar Usuário </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("Editar", "Usuario")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Editar Estádio</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Nome, "Nome", required: false)
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Email, "Email", required: false)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="control-label"> Perfil </label>
                                    @Html.DropDownListFor(m => m.PerfilDeUsuario, Model.PerfisDeUsuario, new { @class = "form-control" })
                                </div>
                                <div class="col-lg-1 col-sm-2">
                                    @Html.InputNumberFor(a => a.Ddd, "DDD", required: false)
                                </div>
                                <div class="col-lg-5  col-sm-10">
                                    @Html.InputNumberFor(a => a.Telefone, "Telefone", required: false)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="control-label"> Ativo </label>
                                    @Html.CheckBoxFor(m => m.Ativo, new { @class = "checkbox" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @Html.BackButton()
                            <button type="submit" class="btn btn-success float-right">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
