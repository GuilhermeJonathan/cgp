@model Campeonato.Aplicacao.GestaoDeApostas.Modelos.ModeloDeEdicaoDeAposta
@using GridMvc.Html

@{
    ViewBag.Title = "Visualizar Aposta Exclusiva";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Aposta" )">Apostas</a></li>
                        <li class="breadcrumb-item active">Visualizar Aposta</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form role="form" action="@Url.Action("SalvarMinhaAposta", "Aposta")" method="post">
                    <div class="callout callout-info">
                        <h5>Visualização da @Model.NomeRodada (@Model.NomeTipoDeAposta) - @Model.NomeUsuario</h5>
                        @if (Model.RodadaFinalizada)
                        {
                            <div class="info-box">
                                <span class="info-box-icon bg-info elevation-1"><i class="fas fa-table"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-number fa-3x"> @Model.Pontuacao ponto(s)</span>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card">
                        <div class="card-header ">
                            <div class="">
                                <div class="row">
                                    <div class="col-lg-11">
                                        <h3 class="card-title">
                                            Aposta da Rodada
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input hidden name="id" value="@Model.IdRodada" />
                        <div class="card-body">

                            @foreach (var jogo in Model.Jogos)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                    <div class="row" style="width: 100%; ">

                                        <div class=" col-lg-3  col-sm-6">
                                            <p class="text-center">
                                                <span class="text-muted">@jogo.SiglaTime1</span>
                                                <img src="../../content/escudos/@jogo.ImagemTime1" style="max-width: 40px;" />
                                                <input type="text" class="text-muted placarResultado text-center @(jogo.CssResultadoTime1)" disabled='disabled' name="placar1[]" maxlength="2" value="@jogo.PlacarTime1">
                                                <span style="padding-bottom: 20px;">x</span>
                                                <input type="text" class="text-muted placarResultado text-center @(jogo.CssResultadoTime2) " disabled='disabled' name="placar2[]" maxlength="2" value="@jogo.PlacarTime2">

                                                <img src="../../content/escudos/@jogo.ImagemTime2" style="max-width: 40px;" />
                                                <span class="text-muted">@jogo.SiglaTime2</span>
                                                <input hidden name="idJogos[]" value="@jogo.Id" />
                                            </p>
                                        </div>
                                        <div class=" col-lg-3  col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="text-muted"> @jogo.NomeTime1</span>
                                                <span class="text-muted"> @jogo.NomeTime2</span>
                                            </p>
                                        </div>
                                        <div class=" col-lg-3 col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="font-weight-bold">
                                                    <i class="fas fa-calendar-plus-o"></i> @jogo.DataDoJogo
                                                </span>
                                                <span class="text-muted">@jogo.HoraDoJogo</span>
                                            </p>
                                        </div>
                                        <div class=" col-lg-3 col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="font-weight-bold">
                                                    <i class="fas fa-calendar-plus-o"></i> @jogo.NomeRodada
                                                </span>
                                                <span class="text-muted">@jogo.NomeEstadio</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            @if (Model.RodadaFinalizada)
                            {
                                <div class="callout callout-info">
                                    <h5>LENGENDA PLACAR: </h5>
                                    <h7> <i class="fas fa-stop verde"></i> Placar exato (3 pontos) </h7>
                                    <h7> <i class="fas fa-stop amarelo"></i> Empate (2 pontos) </h7>
                                    <h7> <i class="fas fa-stop azul"></i> Time vencedor (1 ponto) </h7>
                                </div>
                            }
                            @Html.BackButton()
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
