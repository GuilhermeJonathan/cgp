@model Campeonato.Aplicacao.GestaoDePremiacoes.Modelos.ModeloDeCadastroDePremiacao

@{
    ViewBag.Title = "Gerar Premiação";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Gerar Premiação</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("GerarPremiacao", "Premiacao")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Gerar Premiação</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-lg-3">
                                    <label class="control-label"> Rodadas </label>
                                    @Html.DropDownListFor(m => m.Rodada, Model.Rodadas, new { @class = "form-control autoComplete" })
                                </div>
                                <div class="col-lg-3">
                                    @Html.InputTextFor(a => a.ValorTotal, label: "Valor Total", @class: "mascaraHora", required: true, @readonly: true)
                                </div>
                                <div class="col-lg-3">
                                    @Html.InputTextFor(a => a.ValorAdministracao, label: "Valor Administração", @class: "mascaraReal", @readonly: true)
                                </div>
                                <div class="col-lg-3">
                                    @Html.InputTextFor(a => a.ValorAcumulado, label: "Valor Acumulado", @class: "mascaraReal", @readonly: true)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <label class="control-label"> Primeiro Colocado </label>
                                    @Html.DropDownListFor(m => m.UsuarioPrimeiro, Model.UsuariosPrimeiro, new { @class = "form-control autoComplete" })
                                </div>
                                <div class="col-lg-3">
                                    @Html.InputTextFor(a => a.ValorPremiacaoPrimeiro, label: "Valor Premiação 1º", @class: "mascaraReal", required: true)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <label class="control-label"> Segundo Colocado</label>
                                    @Html.DropDownListFor(m => m.UsuarioSegundo, Model.UsuariosSegundo, new { @class = "form-control autoComplete" })
                                </div>
                                <div class="col-lg-3">
                                    @Html.InputTextFor(a => a.ValorPremiacaoSegundo, label: "Valor Premiação 2º", @class: "mascaraReal")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2">
                                    <label class="control-label"> Lançar Crédito?</label>
                                    @Html.CheckBoxFor(m => m.GerarCredito, new { @class = "checkbox", @checked = "checked" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row botoes">
                                <div class="col-lg-12">
                                    @Html.BackButton()
                                    <button type="submit" id="btnSalvar" class="btn btn-success float-right"> <i class='fa fa-save'> </i> Salvar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
