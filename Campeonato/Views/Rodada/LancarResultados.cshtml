@model Campeonato.Aplicacao.GestaoDeRodada.Modelos.ModeloDeEdicaoDeRodada
@using GridMvc.Html

@{
    ViewBag.Title = "Lançar Resultado da Rodada";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Rodada" )">Rodadas</a></li>
                        <li class="breadcrumb-item active">Lançar Resultados da Rodada</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
   
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form role="form" action="@Url.Action("LancarResultados", "Rodada")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"> Resultados da @Model.Nome </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <input hidden name="id" value="@Model.Id" />
                            @foreach (var jogo in Model.Jogos)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                    <div class="row" style="width: 100%; ">
                                        <div class=" col-lg-3  col-sm-6">
                                            <p class="text-center">
                                                <span class="text-muted">@jogo.SiglaTime1</span>
                                                <img src="../../content/escudos/@jogo.ImagemTime1" style="max-width: 40px;" />
                                                <input type="text" class="text-muted placarResultado text-center" name="placar1[]" maxlength="2" value="@jogo.PlacarTime1">
                                                <span style="padding-bottom: 20px;">x</span>
                                                <input type="text" class="text-muted placarResultado text-center" name="placar2[]" maxlength="2" value="@jogo.PlacarTime2">
                                                <img src="../../content/escudos/@jogo.ImagemTime2" style="max-width: 40px;" />
                                                <span class="text-muted">@jogo.SiglaTime2</span>
                                                <input hidden name="idJogos[]" value="@jogo.Id" />
                                            </p>
                                        </div>
                                        <div class=" col-lg-3  col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="text-muted"> @jogo.NomeTime1</span>
                                                <span class="text-muted"> @jogo.NomeTime2</span>
                                            </p>
                                        </div>
                                        <div class=" col-lg-3 col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="font-weight-bold">
                                                    <i class="fas fa-calendar-plus-o"></i> @jogo.DataDoJogo
                                                </span>
                                                <span class="text-muted">@jogo.HoraDoJogo</span>
                                            </p>
                                        </div>
                                        <div class=" col-lg-3 col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="font-weight-bold">
                                                    <i class="fas fa-calendar-plus-o"></i> @jogo.NomeRodada
                                                </span>
                                                <span class="text-muted">@jogo.NomeEstadio</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            @Html.BackButton()
                            <button type="submit" class="btn btn-primary float-right">Salvar Resultado</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" language="javascript">
        var valida;
        $(function () {

            $(".placarResultado").bind('input paste', function (e) {
                var regex = /[^0-9]/g;
                if ($(this).val().match(regex)) {
                    $(this).val($(this).val().replace(regex, ''));
                }
            });
        });

</script>
