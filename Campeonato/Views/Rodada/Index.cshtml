@model Campeonato.Aplicacao.GestaoDeRodada.Modelos.ModeloDeListaDeRodadas
@using GridMvc.Html

@{
    ViewBag.Title = "Lista de Rodadas";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                        <li class="breadcrumb-item active">Lista de Rodadas</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("Index", "Rodada")" method="get">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Buscar Rodadas</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="control-label"> Rodada </label>
                                    @Html.DropDownListFor(m => m.Filtro.Rodada, Model.Filtro.Rodadas, new { @class = "form-control autoComplete" })
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Filtro.Temporada, "Temporada", required: false)
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @if (User.EhAdministrador())
                            {
                                <a href="@Url.Action("Cadastrar", "Rodada")" class="btn btn-info float-left" style="margin-right: 10px;">Nova Rodada</a>
                            }
                            <button type="submit" class="btn btn-primary float-right">Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    @foreach (var rodada in Model.Lista)
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-header">
                            <h3 class="card-title"> @rodada.Nome </h3>

                            <div class="custom-control custom-switch btnRodadaFechada left">
                                <input type="checkbox" class="custom-control-input btnFecharRodada" id="@rodada.Id" data-id="@rodada.Id" @(rodada.Fechada ? "checked" : "") @(User.EhAdministrador() ? "" : "disabled")>
                                <label class="custom-control-label" for="@rodada.Id"> ABERTA</label>
                            </div>
                            <div class="card-tools">
                                @if (User.EhAdministrador())
                                {
                                    <a href="@Url.Action("LancarResultados", "Rodada", new { id = rodada.Id })" class="btn btn-info right"> Lançar Resultados</a>
                                }

                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>

                            </div>
                        </div>
                        <div class="card-body">

                            @foreach (var jogo in rodada.Jogos)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                    <div class="row" style="width: 100%; ">

                                        <div class=" col-lg-3  col-sm-6">
                                            <p class="text-center">
                                                <span class="text-muted">@jogo.SiglaTime1</span>
                                                <img src="../content/escudos/@jogo.ImagemTime1" style="max-width: 40px;" />
                                                <span class="text-muted placar">@jogo.PlacarTime1</span>
                                                <span style="padding-bottom: 20px;">x</span>
                                                <span class="text-muted placar">@jogo.PlacarTime2</span>
                                                <img src="../content/escudos/@jogo.ImagemTime2" style="max-width: 40px;" />
                                                <span class="text-muted">@jogo.SiglaTime2</span>
                                            </p>
                                        </div>
                                        <div class=" col-lg-3  col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="text-muted"> @jogo.NomeTime1</span>
                                                <span class="text-muted"> @jogo.NomeTime2</span>
                                            </p>
                                        </div>
                                        <div class=" col-lg-3 col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="font-weight-bold">
                                                    <i class="fas fa-calendar-plus-o"></i> @jogo.DataDoJogo
                                                </span>
                                                <span class="text-muted">@jogo.HoraDoJogo</span>
                                            </p>
                                        </div>
                                        <div class=" col-lg-3 col-sm-6">
                                            <p class="d-flex flex-column text-center">
                                                <span class="font-weight-bold">
                                                    <i class="fas fa-calendar-plus-o"></i> @jogo.NomeRodada
                                                </span>
                                                <span class="text-muted">@jogo.NomeEstadio</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>

    }
</div>


<script>
    $(function () {

        $(".btnFecharRodada").click(function () {
            var idRodada = $(this).attr("data-id");
           
            $.ajax({
                type: 'GET',
                url: '../Rodada/FecharRodada',
                data: 'id=' + idRodada,
                success: function (resultado) {
                    campeonatoGeral.AdicionarMensagemDeSucesso(resultado);
                }
            });
        });
        
    })
</script>
