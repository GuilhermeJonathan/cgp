@model Cgp.Aplicacao.GestaoDeUsuarios.Modelos.ModeloDeEdicaoDeUsuario
@using GridMvc.Html

@{
    ViewBag.Title = "Extrato Financeiro";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Extrato Financeiro</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title  ">Extrato Financeiro - @Model.Nome</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                        <div class="info-box">
                            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-dollar-sign"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-number fa-2x"> Saldo: R$@Model.Credito</span>
                            </div>
                        </div>
                        <div class="" style="float: right;">
                            <a href="#" data-id="@Model.Id" data-nome="@Model.Nome" data-saldo="@Model.Credito" title="Adicionar Saldo" class="btn btn-info retirarSaldo"><i class="fas fa-dollar-sign"></i> Pedido de Retirada</a>
                        </div>
                    </div>

                    <div class="card-body table-responsive p-0">
                        @Html.Grid(Model.HistoricosFinanceiros).Columns(colunas =>
                        {
                           colunas.Add(m => m.DataDoCadastro).Titled("Data");
                           colunas.Add(m => m.TipoDeOperacao).Titled("Operação");
                           colunas.Add(m => m.TipoDeSolicitacaoFinanceira).Titled("Solicitação");
                           colunas.Add(m => m.Descricao).Titled("Descrição");

                           colunas.Add().Encoded(false).Sanitized(false).Titled("Valor").SetWidth(30).RenderValueAs(
                                m => @<div class="btn-group btn-group-sm @m.CssValor"> @m.ValorTexto </div>);

                 colunas.Add(m => m.Saldo).Sortable(false).Titled("Saldo R$");

             }).WithPaging(100).Sortable(true).EmptyText("Nenhum histórico financeiro encontrado")
                    </div>
                    <div class="card-footer">
                        @Html.BackButton()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_RetirarSaldo")
<script>
    $(function () {
        $(".retirarSaldo").button().click(function () {
            debugger;
            var idUsuario = $(this).attr("data-id");
            var nomeUsuario = $(this).attr("data-nome");
            var saldo = $(this).attr("data-saldo");

            var form = $("#modalRetirarSaldo");
            $(".Id").val(idUsuario);
            $(".spnTitulo").html(nomeUsuario);
            $(".spnSaldo").html(saldo);
            form.modal('show');
        });
    })
</script>