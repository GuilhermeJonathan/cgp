<form action="@Url.Action("RetirarSaldo", "Extrato")" id="formRetiradaSaldo" method="get" enctype="multipart/form-data">
    <div class="modal fade" id="modalRetirarSaldo" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Retirada - <span class="spnTitulo"></span></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <input type="hidden" name="Id" class="Id" />
                </div>
                <div class="modal-body">
                    <div class="card divDados">
                        <div class="card-header">
                            <h3 class="card-title">
                                Fazer pedido de retirada. Saldo: R$ <span class="spnSaldo"></span>
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="info-box">
                                        <span class="info-box-icon bg-info elevation-1"><i class="fas fa-dollar-sign"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text txtNome fa-1x"></span>
                                            <input type="text" name="Saldo" id="Saldo" class="fa-3x mascaraReal txtSaldo" style="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    @Html.EditButton("Fazer Retirada")
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $(function () {
        $('.mascaraReal').mask('000.000.000.000.000,00', { reverse: true });

        $("#formRetiradaSaldo").on("submit", function () {
            var saldo = $("#Saldo").val();
            var saldoSeparado = saldo.split(',');
            $("#Saldo").val(saldoSeparado[0]);
        })
    })
</script>

