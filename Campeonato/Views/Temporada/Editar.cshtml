@model Campeonato.Aplicacao.GestaoDeTemporadas.Modelos.ModeloDeEdicaoDeTemporada
@using GridMvc.Html

@{
    ViewBag.Title = "Edição de Temporada";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                        <li class="breadcrumb-item active">Edição de Temporada</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("Editar", "Temporada")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Edição de Rodadas</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    @Html.InputTextFor(a => a.Nome, "Nome", required: false)
                                </div>
                                <div class="col-lg-4">
                                    @Html.InputTextFor(a => a.Ano, "Ano", required: false)
                                </div>
                                <div class="col-lg-4">
                                    @Html.InputTextFor(a => a.Pais, "País", required: false)
                                </div>
                                <div class="col-lg-1">
                                    <label class="control-label"> Ativo </label>
                                    @Html.CheckBoxFor(m => m.Ativo, new { @class = "checkbox" })
                                </div>
                                <div class="col-lg-1">
                                    <label class="control-label"> Aberta </label>
                                    @Html.CheckBoxFor(m => m.Aberta, new { @class = "checkbox" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @Html.BackButton()
                            <button type="submit" class="btn btn-success float-right">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>