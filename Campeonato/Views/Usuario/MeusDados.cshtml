@model Campeonato.Aplicacao.GestaoDeUsuarios.Modelos.ModeloDeEdicaoDeUsuario

@{
    ViewBag.Title = "Meus Dados";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Meus Dados </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("MeusDados", "Usuario")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Editar meus dados</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Nome, "Nome", required: false)
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Email, "Email", required: false)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-1">
                                    @Html.InputNumberFor(a => a.Ddd, "DDD", required: false)
                                </div>
                                <div class="col-lg-5">
                                    @Html.InputNumberFor(a => a.Telefone, "Telefone", required: false)
                                </div>
                                <div class="col-lg-2">
                                    <label class="control-label"> Tipo de Chave </label>
                                    @Html.DropDownListFor(m => m.TipoDePix, Model.TiposDePix, new { @class = "form-control" })
                                </div>
                                <div class="col-lg-4">
                                    @Html.InputTextFor(a => a.ChavePix, "Chave Pix", required: false)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="info-box" style="margin-top: 10px;">
                                        <span class="info-box-icon bg-info elevation-1"><i class="fas fa-dollar-sign"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-number fa-2x"> R$ @Model.Credito</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <a href="@Url.Action("Historico", "Usuario", new {id = Model.Id})" class="btn btn-info float-left"> Histórico Financeiro</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            @Html.BackButton()
                            <button type="submit" class="btn btn-success float-right">Editar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
