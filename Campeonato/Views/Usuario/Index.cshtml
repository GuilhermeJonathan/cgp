@model Campeonato.Aplicacao.GestaoDeUsuarios.Modelos.ModeloDeListaDeUsuarios
@using GridMvc.Html

@{
    ViewBag.Title = "Lista de Usuários";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Lista de usuários</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("Index", "Usuario")" method="get">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Buscar Usuário</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Filtro.Nome, "Nome", required: false)
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Filtro.Email, "Email", required: false)
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label"> Ativo </label>
                                @Html.CheckBoxFor(m => m.Filtro.Ativo, new { @class = "checkbox" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de Usuários </h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="card-body table-responsive p-0">
                        @Html.Grid(Model.Lista).Columns(colunas =>
                        {
                           colunas.Add(m => m.Nome).Titled("Nome");
                           colunas.Add(m => m.Email).Titled("Email");
                           colunas.Add(m => m.PerfilDeUsuario).Titled("Perfil");
                           colunas.Add(m => m.Saldo).Titled("Saldo");
                           colunas.Add(m => m.DataDoCadastro).Titled("DataDoCadastro");

                            colunas.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(
                            m => @<div class="custom-control custom-switch left">
                                    <input type="checkbox" class="custom-control-input btnAtivarUsuario" id="@m.Id" data-id="@m.Id" @(m.Ativo ? "checked" : "")>
                                    <label class="custom-control-label" for="@m.Id"> ATIVO</label>
                                </div>);

                             colunas.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(
                                     m => @<div class="btn-group btn-group-sm"><a href="@Url.Action("Editar", "Usuario", new { id = m.Id })" title="Editar" class="btn btn-info"><i class="fas fa-pencil-alt"></i></a></div>);

                             colunas.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(
                                   m => @<div class="btn-group btn-group-sm" style="width: 34px;"><a href="@Url.Action("Historico", "Usuario", new { id = m.Id })" title="Histórico Financeiro" class="btn btn-info"><i class="fas fa-history"></i></a></div>);

                            
                             colunas.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(
                                   m => @<div class="btn-group btn-group-sm" style="width: 34px;"><a href="#" data-id="@m.Id" data-nome="@m.Nome" title="Adicionar Saldo" class="btn btn-info cadastrarSaldo"><i class="fas fa-dollar-sign"></i></a></div>);

                         }).WithPaging(30).Sortable(true).EmptyText("Nenhum usuário encontrado")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_CadastrarSaldo")

<script>
    $(function () {
        $(".btnAtivarUsuario").click(function () {
            var idUsuario = $(this).attr("data-id");
            $.ajax({
                type: 'GET',
                url: '../Usuario/AtivarUsuario',
                data: 'id=' + idUsuario,
                success: function (resultado) {
                    campeonatoGeral.AdicionarMensagemDeSucesso(resultado);
                }
            });
        });

        $(".cadastrarSaldo").button().click(function () {
            var idUsuario = $(this).attr("data-id");
            var nomeUsuario = $(this).attr("data-nome");

            var form = $("#modalCadastrarSaldo");
            $(".Id").val(idUsuario);
            $(".spnTitulo").html(nomeUsuario);
            form.modal('show');
        });

    })

</script>