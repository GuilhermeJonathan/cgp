@using Campeonato.Dominio.ObjetosDeValor;

<form action="@Url.Action("CadastrarSaldo", "Usuario")" id="formCadastroSaldo" method="get" enctype="multipart/form-data">
    <div class="modal fade" id="modalCadastrarSaldo" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Adicionar Saldo - <span class="spnTitulo"></span></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <input type="hidden" name="Id" class="Id" />
                </div>
                <div class="modal-body">
                    <div class="card divDados">
                        <div class="card-header">
                            <h3 class="card-title">
                                Adicionar saldo à Conta
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="info-box">
                                        <span class="info-box-icon bg-info elevation-1"><i class="fas fa-dollar-sign"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text txtNome fa-1x"></span>
                                            <input type="text" name="Saldo" id="Saldo" class="fa-3x mascaraReal txtSaldo" style="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="input-group">
                                        <label class="radio-inline">
                                            <input type="radio" id="tipo-de-pessoa" name="TipoFinanceiro" value="@TipoDeSolicitacaoFinanceira.Dinheiro" required checked /> Crédito
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" id="tipo-de-pessoa" name="TipoFinanceiro" value="@TipoDeSolicitacaoFinanceira.Premiacao" required /> Premiação
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    @Html.EditButton("Adicionar")
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $(function () {
        $('.mascaraReal').mask('000.000.000.000.000,00', { reverse: true });

        $("#formCadastroSaldo").on("submit", function () {
            var saldo = $("#Saldo").val();
            var saldoSeparado = saldo.split(',');
            $("#Saldo").val(saldoSeparado[0]);

        })

        $("#formCadastroSaldo").submit(function (event) {

        });
    })
</script>
