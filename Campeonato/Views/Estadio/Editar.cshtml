@model Campeonato.Aplicacao.GestaoDeEstadio.Modelos.ModeloDeEdicaoDeEstadio

@{
    ViewBag.Title = "Editar Estádio";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Editar Estádio </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Action("Editar", "Estadio")" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Editar Estádio</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Nome, "Nome", required: false)
                                </div>
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Cidade, "Cidade", required: false)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="control-label"> Times </label>
                                    @Html.DropDownListFor(m => m.Time, Model.Times, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label class="control-label"> Ativo </label>
                                @Html.CheckBoxFor(m => m.Ativo, new { @class = "checkbox" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success float-right">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>