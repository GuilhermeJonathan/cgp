@model Campeonato.Aplicacao.GestaoDeApostas.Modelos.ModeloDeListaDeApostas
@using GridMvc.Html

@{
    ViewBag.Title = "Visualizar todas Apostas";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                        <li class="breadcrumb-item active">Visualizar todas as Apostas</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-3 col-sm-12 col-xs-12">
                                <h3 class="card-title">
                                    Lista de Apostas da Rodada
                                </h3>
                            </div>

                            <div class="col-lg-3 col-sm-12 col-xs-12 text-center">
                                <a href="@Url.Action("VisualizarTodasApostasPDF", "Aposta", new { id = Model.Filtro.Rodada})" class="btn btn-block btn-primary btnBotaoTopo">Imprimir Apostas</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="jogosDaRodada">
        @foreach (var rodada in Model.Lista)
        {
            <div class="container-fluid ">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">

                            <div class="card-header">
                                <h3 class="card-title"> @rodada.NomeUsuario - @rodada.NomeRodada - <i class="fas fa-table"></i><span class=""> @rodada.Pontuacao ponto(s)</span></h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">

                                @foreach (var jogo in rodada.Jogos)
                                {
                                    <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                        <div class="row" style="width: 100%; ">

                                            <div class=" col-lg-3  col-sm-6">
                                                <p class="text-center">
                                                    <span class="text-muted">@jogo.SiglaTime1</span>
                                                    <img src="../../content/escudos/@jogo.ImagemTime1" style="max-width: 40px;" />
                                                    <span class="text-muted placar @(jogo.CssResultadoTime1)">@jogo.PlacarTime1</span>
                                                    <span style="padding-bottom: 20px;">x</span>
                                                    <span class="text-muted placar @(jogo.CssResultadoTime2)">@jogo.PlacarTime2</span>
                                                    <img src="../../content/escudos/@jogo.ImagemTime2" style="max-width: 40px;" />
                                                    <span class="text-muted ">@jogo.SiglaTime2</span>
                                                </p>
                                            </div>
                                            <div class=" col-lg-3  col-sm-6">
                                                <p class="d-flex flex-column text-center">
                                                    <span class="text-muted"> @jogo.NomeTime1</span>
                                                    <span class="text-muted"> @jogo.NomeTime2</span>
                                                </p>
                                            </div>
                                            <div class=" col-lg-3 col-sm-6">
                                                <p class="d-flex flex-column text-center">
                                                    <span class="font-weight-bold">
                                                        <i class="fas fa-calendar-plus-o"></i> @jogo.DataDoJogo
                                                    </span>
                                                    <span class="text-muted">@jogo.HoraDoJogo</span>
                                                </p>
                                            </div>
                                            <div class=" col-lg-3 col-sm-6">
                                                <p class="d-flex flex-column text-center">
                                                    <span class="font-weight-bold">
                                                        <i class="fas fa-calendar-plus-o"></i> @jogo.NomeRodada
                                                    </span>
                                                    <span class="text-muted">@jogo.NomeEstadio</span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript" language="javascript">

</script>
