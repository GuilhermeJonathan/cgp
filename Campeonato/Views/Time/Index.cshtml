@model Campeonato.Aplicacao.GestaoDeTimes.Modelos.ModeloDeListaDeTimes
@using GridMvc.Html

@{
    ViewBag.Title = "Lista de Times";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Lista de Times</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Buscar Times</h3>
                    </div>
                    <form role="form" action="@Url.Action("Index", "Time")" method="get">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.InputTextFor(a => a.Filtro.Nome, "Nome", required: false)
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label"> Ativo </label>
                                @Html.CheckBoxFor(m => m.Filtro.Ativo, new { @class = "checkbox" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Buscar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de Times </h3>
                    </div>
                    <div class="card-body p-0">
                        @Html.Grid(Model.Lista).Columns(colunas =>
                        {
                           colunas.Add(m => m.Nome).Titled("Nome");
                           colunas.Add(m => m.Ativo).Titled("Ativo");
                           colunas.Add(m => m.DataDoCadastro).Titled("DataDoCadastro");

                           colunas.Add().Encoded(false).Sanitized(false).Titled("Escudo").SetWidth(30).RenderValueAs(
                             m => Html.Raw("<img style='max-width: 30px;' src='../content/escudos/" + m.Imagem + "' </>"));

                             colunas.Add().Encoded(false).Titled("Editar").Sanitized(false).SetWidth(30).RenderValueAs(
                            m => @<a href="@Url.Action("Editar", "Time", new { id = m.Id })" title="Editar"> <i class="nav-icon fas fa-pencil-alt"></i> </a>);

                        }).WithPaging(30).Sortable(true).EmptyText("Nenhum time encontrado")
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>


